{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {"@/*": ["./*"]}
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "app",
    "components",
    "constants",
    "hooks",
    "utils",
    "scripts",
    "index.ts",
    "index.tsx"
  ],
  "exclude": ["server"],
  "extends": "expo/tsconfig.base"
}